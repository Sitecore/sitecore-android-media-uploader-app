<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:indeterminate="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_placeholder" />

    <ImageButton
        android:id="@+id/button_more"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_above="@id/progress"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="@drawable/selectable_background_sitecore"
        android:src="@drawable/ic_more" />

    <TextView
        android:id="@+id/text_upload_name"
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/image_preview"
        android:layout_toLeftOf="@id/button_more"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_upload_path"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/image_preview"
        android:layout_toLeftOf="@id/button_more"
        android:layout_below="@id/text_upload_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_upload_status"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/image_preview"
        android:layout_toLeftOf="@id/button_more"
        android:layout_below="@id/text_upload_path"
        android:layout_height="wrap_content" />

</RelativeLayout>